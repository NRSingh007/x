                                    
<%- include('../../includes/header.ejs',{pageTitle:pageTitle}) %>

</head>

<body>

        <%- include("./../../includes/navBar.ejs") %>
        <%- include("./../../includes/shortcutBar.ejs") %>
    
        <div class="container">
            
            <div class="row p-3 my-3 d-flex flex-column justify-content-center align-items-center  ">
                    <% if (errorMessage ) { %>
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <%= errorMessage %>
                        </div>
                        <% } %>
                        <% if (noticeMessage ) { %>
                            <div class="alert alert-info alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <%= noticeMessage %>
                            </div>
                            <% } %>
                    <div class="col-5 panel py-5">
                            
                        <div class="col " id="auth-reset-pwd">
                                
                                <form action="/auth/new-password" method="POST">
                                    
                                    <div class="form-group">
                                        <label for="password">Password:</label>
                                        <input type="password" name="password" class="form-control" id="password">
                                    </div>
                                    <div class="form-group">
                                        <label for="confirm_password">Confirm Password:</label>
                                        <input type="password" name="confirm_password" class="form-control" id="confirm_password">
                                    </div>
                                    <input type="hidden" name="resetToken" value="<%= resetToken %>" >
                                    
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                                    
                                    <button type="submit" class="btn btn-danger btn-block p-3 mt-4">Reset Password</button>
                                </form>
            
            
                                <p class="small pt-3 lightgrey">
                                    By creating an account, you agree to Digital Manipur's
                                    <a>Terms of Service</a>,
                                    <a href="">Cookie Policy</a> ,
                                    <a href="">Privacy Policy</a> and
                                    <a href="">Content Policies</a> .
                                </p>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../../includes/footer.ejs') %>

</body>

</html>

