<div class="form-group">
    <label for="brand">Brand*</label>
    <select class="form-control custom-select" id="product_brand" name="product_brand">
        <option value="none">Select Brand</option>
        <%if(edit == true){%>

        <%brands.forEach(function(brand, index){%>

        <%if(brand.product_subcategory == subcategory){%>

        <option value="<%=brand._id%>"
            <%if(product.product_brand.toString().trim() == brand._id.toString().trim()){%>selected<%}%> ><%=brand.brand_name%></option>
            <%}%>
                    
                    <%})%>

            <%}%>
    
                <!-- if edit is false -->
                <%if(edit == false){%>

            <%brands.forEach(function(brand, index){%>

            <%if(brand.product_subcategory == subcategory){%>

        <option value="<%=brand._id%>"><%=brand.brand_name%></option>
        <%}%>
                            
                            <%})%>

        <%}%>
    </select>
</div>
<div class="form-group">
    <label for="product_year">Year*</label>
    <input type="number" class="form-control" name="product_year" id="product_year" <%if(edit){%>value="<%=product.product_year%>"<%}%> >
</div>


<div class="form-group">
    <label for="product_fuel_type">Fuel Type*</label>
    <select class="form-control custom-select" id="product_fuel_type" name="product_fuel_type">
        <%if(edit){%>
        <option value="none">Select Fuel Type</option>
        <option value="CNG & Hybrids" <%if(product.product_fuel_type.trim() == 'CNG & Hybrids'){%>selected<%}%> >CNG & Hybrids</option>
        <option value="Diesel" <%if(product.product_fuel_type.trim() == 'Diesel'){%>selected<%}%> >Diesel</option>
        <option value="Petrol" <%if(product.product_fuel_type.trim() == 'Petrol'){%>selected<%}%> >Petrol</option>
        <option value="Electric" <%if(product.product_fuel_type.trim() == 'Electric'){%>selected<%}%> >Electric</option>
        <option value="LPG" <%if(product.product_fuel_type.trim() == 'LPG'){%>selected<%}%> >LPG</option>
            <%} else{%> <option value="none">Select Fuel Type</option>
        <option value="CNG & Hybrids">CNG & Hybrids</option>
        <option value="Diesel">Diesel</option>
        <option value="Petrol">Petrol</option>
        <option value="Electric">Electric</option>
        <option value="LPG">LPG</option>
        <%}%>
        
    </select>
</div>
<div class="form-group">
    <label for="product_transmission_type">Transmission Type*</label>
