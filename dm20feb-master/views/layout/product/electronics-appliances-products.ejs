<% if(subcategory === 'Fridges' || 
subcategory === 'Washing Machines' || 
subcategory === 'Computers & Laptops' || 
subcategory === 'Camera & Lenses' || 
subcategory === 'Hard Disks, Printers & Monitors' || 
subcategory === 'TVs, Video - Audio' || 
subcategory === 'Kitchen & Other Appliances' ||
subcategory === 'ACs'
    ) { %>
<div class="form-group">
    <label for="brand">Brand*</label>
    <select class="form-control custom-select" id="product_brand" name="product_brand">
        <option value="none">Select Brand</option>
        <%if(edit == true){%>

        <%brands.forEach(function(brand, index){%>

        <%if(brand.product_subcategory == subcategory){%>

        <option value="<%=brand._id%>"
            <%if(product.product_brand.toString().trim() == brand._id.toString().trim()){%>selected<%}%> ><%=brand.brand_name%></option>
            <%}%>
                
                <%})%>

            <%}%>

            <!-- if edit is false -->
            <%if(edit == false){%>

            <%brands.forEach(function(brand, index){%>

            <%if(brand.product_subcategory == subcategory){%>

        <option value="<%=brand._id%>"><%=brand.brand_name%></option>
        <%}%>
                        
                        <%})%>

        <%}%>

    </select>
</div>
<% } %>
        <div class="form-group">
            <label for="product_condition">Condition*</label>
            <select class="form-control custom-select" id="product_condition" name="product_condition">
                <option value="none">Select Condition</option>
                <option value="Brand New"
                    <% if(edit){ %><%if(product.product_condition == "Brand New"){%>selected<%}%><% } %>>
                    Brand New</option>
                <option value="Used" <% if(edit){ %><%if(product.product_condition == 'Used'){%>selected<%}%><% } %>>
                    Used
                </option>
            </select>
        </div>

        <% if(subcategory === 'Fridges') { %>
        <div class="form-group">
            <label for="product_door_style">Door Style*</label>
            <select class="form-control custom-select" id="product_door_style" name="product_door_style">
                <%if(edit){%>
                <option value="none">Select Door Style</option>
                <option value="Double Door" <%if(product.product_door_style.trim() == 'Double Door'){%>selected<%}%> >Double Door</option>
        <option value="Freezer on Top" <%if(product.product_door_style.trim() == 'Freezer on Top'){%>selected<%}%> >Freezer on Top</option>
        <option value="Multi Door" <%if(product.product_door_style.trim() == 'Multi Door'){%>selected<%}%> >Multi Door</option>
        <option value="Side by Side" <%if(product.product_door_style.trim() == 'Side by Side'){%>selected<%}%> >Side by Side</option>
        <option value="Single Door" <%if(product.product_door_style.trim() == 'Single Door'){%>selected<%}%> >Single Door</option>
        <option value="Triple Door" <%if(product.product_door_style.trim() == 'Triple Door'){%>selected<%}%> >Triple Door</option>
        <option value="Other" <%if(product.product_door_style.trim() == 'Other'){%>selected<%}%> >Other</option>
            <%} else{%> <option value="none">Select Door Style</option>
                <option value="Double Door">Double Door</option>
                <option value="Freezer on Top">Freezer on Top</option>
                <option value="Multi Door">Multi Door</option>
                <option value="Side by Side">Side by Side</option>
                <option value="Single Door">Single Door</option>
                <option value="Triple Door">Triple Door</option>
                <option value="Other">Other</option>
                <%}%>
        
    </select>
</div>
<% } %>