<div class="modal fade" id="filterByCategories">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-zoom">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h6 class="modal-title">Filter search by Category</h6>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body pt-0 ">

                <div class="p-3 d-flex flex-row flex-wrap">
                    <% let at = filterCategories.categories.sort( (a,b) => {
                        var x = a.name.toLowerCase();
                        var y = b.name.toLowerCase();
                        if (x < y) {return -1;}
                        if (x > y) {return 1;}
                        return 0;
                      }); for (  let Category of at ) { %>
                        
                    <div class="district filter-item">
    
                        <a href="/search?stext=<%= typeof stext != 'undefined' ? stext : '' %>&slocation=<%=  slocation ? slocation : '' %>&slocality=<%= typeof slocality != 'undefined' ? slocality : '' %>&sdistrict=<%= typeof sdistrict != 'undefined' ? sdistrict : '' %>&sstate=<%= typeof sstate != 'undefined'? sstate : '' %>&scat=<%= Category.name %>&p=1&li=15&sk=0" class="a-cus">

                            <%= Category.name  %>
                        </a>

                    </div>
                    <% } %>
                    

                </div>

                

            </div>



        </div>
    </div>
</div>
